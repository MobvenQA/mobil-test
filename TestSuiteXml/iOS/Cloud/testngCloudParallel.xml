            <class name="stepDefinitions.SuiteHooks"/>
            <class name="com.flick.runners.TestRunner"/>
        </classes>
    </test>

    <test name="Cloud iOS Device 3">
        <parameter name="environment" value="cloud"/>
        <parameter name="platform" value="ios"/>
        <parameter name="appKey" value="Sociable"/>
        <parameter name="deviceIndex" value="2"/>
        <classes>
            <class name="stepDefinitions.SuiteHooks"/>
            <class name="com.flick.runners.TestRunner"/>
        </classes>
    </test>

</suite>
