<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cloud iOS - Parallel" parallel="tests" thread-count="3" preserve-order="true">
    <parameter name="environment" value="cloud"/>
    <parameter name="platform" value="ios"/>
    <parameter name="appKey" value="Playdate"/>

    <!-- Device 0: TestFlight -->
    <test name="Device-0 - TestFlight">
        <parameter name="deviceIndex" value="0"/>
        <classes>
            <class name="stepDefinitions.SuiteHooks"/> <!-- Driver bir kez açılır -->
            <class name="com.flick.runners.TestRunner"/> <!-- testFlight ve onboard sırayla -->
        </classes>
    </test>

    <!-- Device 1: Onboarding -->
    <test name="Device-1 - Onboarding">
        <parameter name="deviceIndex" value="1"/>
