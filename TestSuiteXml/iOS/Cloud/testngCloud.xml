<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cloud iOS - Sequential" parallel="false" preserve-order="true">
    <parameter name="environment" value="cloud"/>
    <parameter name="platform" value="ios"/>
    <parameter name="appKey" value="Geovision"/>
    <parameter name="deviceIndex" value="0"/>
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg" />
    </listeners>

    <!-- Tüm feature’ları tek session ile sırayla koşar -->
    <test name="All Features Sequential">
        <classes>
            <class name="hooks.SuiteHooks"/> <!-- Driver bir kez açılır -->
            <class name="com.flick.runners.TestRunner"/> <!-- testFlight ve onboard sırayla -->
        </classes>
    </test>
</suite>
